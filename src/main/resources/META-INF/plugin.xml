<idea-plugin>
    <id>com.jetbrains.call-graph-plugin</id>
    <name>Call Graph</name>
    <vendor email="chentai.kao@gmail.com" url="https://chent.ai">Chentai</vendor>

    <description>A tool to visualize class/function/variable level dependency graph.</description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products -->
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <toolWindow
                id="Call Graph"
                secondary="true"
                icon="/icons/plus.png"
                anchor="right"
                factoryClass="CallGraphToolWindowFactory"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>
